<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.water.dao.ArchiveDAO" >
  <resultMap id="BaseResultMap" type="com.water.domain.Archive" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="area_id" property="areaId" jdbcType="INTEGER" />
    <result column="code" property="code" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="hall_id" property="hallId" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="record_user" property="recordUser" jdbcType="INTEGER" />
    <result column="is_delete" property="isDelete" jdbcType="INTEGER" />
    <result column="hall_name" property="hallName" jdbcType="VARCHAR" />
    <result column="area_name" property="areaName" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, area_id, code, create_time, hall_id, name, record_user, is_delete
  </sql>
  <!-- 查询条件 -->
  <sql id="whereClause">
    <where>
      and is_delete = 0
      <if test="area_id != null">
        and area_id =#{areaId}
      </if>
      <if test="name != null and name.trim() != ''">
        and name like concat('%', trim(#{name}),'%')
      </if>
    </where>
  </sql>
  <!--权限过滤-->
  <sql id="authSql">
    <where>
      <if test="areaIds != null and areaIds.size != 0">
        and area_id in
        <foreach collection="areaIds" index="index" item="item"
                 open="(" separator="," close=")">
          #{item}
        </foreach>
      </if>
    </where>
  </sql>
  <select id="queryTotal" resultType="int">
    select count(1) from t_archive
    <include refid="whereClause"/>
  </select>

  <select id="queryList" resultMap="BaseResultMap">
    select     a.id, a.area_id, a.code, a.create_time, a.hall_id, a.name, a.record_user, a.is_delete
    ,b.name as area_name,c.name as hall_name
    from (select id,name from t_area <include refid="authSql"/>)  as b  right JOIN (
    select
    <include refid="Base_Column_List"/>
    from t_archive
    <include refid="whereClause"/>
    <choose>
      <when test="sidx != null and sidx.trim() != ''">
        order by ${sidx} ${order}
      </when>
      <otherwise>
        order by id desc
      </otherwise>
    </choose>
    <if test="offset != null and limit != null">
      limit #{offset}, #{limit}
    </if>
    )as a on b.id = a.area_id LEFT JOIN (select id,name from t_bizhall) as c on c.id = a.hall_id
  </select>

  <update id="updateDeleteState" parameterType="java.lang.Long">
    update t_archive
    set is_delete = 1
    where id  =  #{id}
  </update>




  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_archive
    where id = #{id,jdbcType=INTEGER}
  </select>



  <select id="selectAreaMessage" resultType="com.water.domain.IdAndNameDTO"  >
    select id , name from t_area
    <where>
      and is_delete = 0
      <if test="AreaIds != null and AreaIds.size != 0">
        and id in
        <foreach collection="AreaIds" index="index" item="item"
                 open="(" separator="," close=")">
          #{item}
        </foreach>
      </if>
    </where>
  </select>

  <select id="selectHallMessage" resultType="com.water.domain.IdAndNameDTO"  >
    select id , name from t_bizhall
    <where>
      and is_delete = 0
      <if test="HallIds != null and HallIds.size != 0">
        and id in
        <foreach collection="HallIds" index="index" item="item"
                 open="(" separator="," close=")">
          #{item}
        </foreach>
      </if>
    </where>
  </select>





  <insert id="insertSelective" parameterType="com.water.domain.Archive" >
    insert into t_archive
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="areaId != null" >
        area_id,
      </if>
      <if test="code != null" >
        code,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
      <if test="hallId != null" >
        hall_id,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="recordUser != null" >
        record_user,
      </if>
      <if test="isDelete != null" >
        is_delete,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
      <if test="areaId != null" >
        #{areaId,jdbcType=INTEGER},
      </if>
      <if test="code != null" >
        #{code,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="hallId != null" >
        #{hallId,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="recordUser != null" >
        #{recordUser,jdbcType=INTEGER},
      </if>
      <if test="isDelete != null" >
        #{isDelete,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.water.domain.Archive" >
    update t_archive
    <set >
      <if test="areaId != null" >
        area_id = #{areaId,jdbcType=INTEGER},
      </if>
      <if test="code != null" >
        code = #{code,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="hallId != null" >
        hall_id = #{hallId,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="recordUser != null" >
        record_user = #{recordUser,jdbcType=INTEGER},
      </if>
      <if test="isDelete != null" >
        is_delete = #{isDelete,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>