                charge_type,
            </if>
            <if test="createUser != null">
                create_user,
            </if>
            <if test="custCode != null">
                cust_code,
            </if>
            <if test="custId != null">
                cust_id,
            </if>
            <if test="invoiceCode != null">
                invoice_code,
            </if>
            <if test="payType != null">
                pay_type,
            </if>
            <if test="isDelete != null">
                is_delete,
            </if>
            <if test="factoryId != null">
                factory_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
